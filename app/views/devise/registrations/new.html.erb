<link href='http://fonts.googleapis.com/css?family=Questrial|Anton' rel='stylesheet' type='text/css'>
<%= stylesheet_link_tag "signup" %>
<% content_for :head do %>
<%= tag :meta, :name => "stripe-key", :content => ENV['STRIPE_PUBLIC_KEY'] %>
<% end %>
<div id="stripe_error" class="alert alert-error" style="display:none" ></div>
 <div class="brick_texture"></div>
<div class="transparent_top_box"></div>
<form id="SignupForm" action="">

  <div class="row">
  <div class="col-sm-6">
      <p class="signup1_title_txt">SAY HELLO TO YOUR NEW, AWESOME BODY.</p>
      <p class="signup1_subtitle_txt">Create your SkinnyStork Account</p>
      <div class="signup1_sec1_right_line"></div>
      <div class="signup1_sec1_left_line"></div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "card_form form-vertical" }) do |f| %>
      <h3><%= params[:plan].titleize if params[:plan] %> </h3> 
      <%= hidden_field_tag 'plan', params[:plan] %>
      <%= devise_error_messages! %>
      <div class="form-group">  
          <h5 class="signup2_sec1_question1">FIRST NAME</h5>
          <div class="row">
              <div class="col-sm-6">
                  <%= f.text_field :first_name,  :autofocus =>true, :required => true, :class=>"signup2_sec1_q1_fillin" %>  
              </div>
          </div>
      </div>
      
      <div class="form-group">
        <h5 class="signup2_sec1_question2">LAST NAME</h5>
        <div class="row">
          <div class="col-sm-6">
            <%= f.text_field :last_name,  :required => true , :class=>"signup2_sec1_q2_fillin" %> 
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <h5 class="signup2_sec1_question3"> PICK A USERNAME</h5>
        <div class="row">
          <div class="col-sm-6">
            <%= f.text_field :username,  :required => true , :class=>"signup2_sec1_q3_fillin" %>   
          </div>
        </div>
      </div>
    
      <div class="form-group">
        <h5 class="signup2_sec1_question4">E-MAIL ADDRESS</h5>
        <div class="row">
          <div class="col-sm-6">      
            <%= f.email_field :email, :required => true , :class=>"signup2_sec1_q4_fillin" %>  
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
           <h5 class="signup2_sec1_question5">PASSWORD</h5>
            <%= f.password_field :password, :required => true, :class=>"signup2_sec1_q5_fillin" %> 
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
             <h5 class="signup2_sec1_question6">PASSWORD CONFIRMATION</h5>
              <%= f.password_field :password_confirmation, :required => true, :class=>"signup2_sec1_q6_fillin" %> 
          </div>
        </div>
      </div>
     <div class="signup3_sec3_right_line"></div>
     <div class="signup3_sec3_left_line"></div> 
     <h2 class="signup3_sec3_title">Payment</h2>
      <div class="row">
          <div class="payment">
              <div class="col-sm-6" >
                  <% if @user.stripe_token %>
                    <p>Credit card acceptance is pending.</p>
                  <% else %>
                    <div class="field">
                        <%= label_tag :card_number, "Credit Card Number" %>
                        <%= text_field_tag :card_number, nil, name: nil %> 
                    </div>
                    <div class="field">
                        <%= label_tag :card_code, "Card Security Code (CVV)" %> 
                        <%= text_field_tag :card_code, nil, name: nil %>
                    </div>
                    <div class="field">
                        <%= label_tag :card_month, "Card Expiration" %>
                        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}%> 
                        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, {name: nil, id: "card_year"}%> 
                    </div>
                    <div class="field">
                        <%= f.text_field :coupon, :label => 'Promotional Coupon (if any)' %>
                    </div>
                <% end %>
                <%= f.hidden_field :stripe_token %>  
                <%= f.submit "Sign up", class: "btn btn-primary", :id=>"SaveAccount" %>
              </div>
          </div>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
    </div>
</form>